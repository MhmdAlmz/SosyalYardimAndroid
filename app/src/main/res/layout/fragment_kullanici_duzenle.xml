<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragmentler.KullaniciDuzenleFragment">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/TxtKullaniciAdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:hint="Kullanıcı Adı"
        android:textCursorDrawable="@color/editTextBaslikRengi"
       android:textSize="14sp"
        app:met_baseColor="@color/editTextBaslikRengi"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="16"
        app:met_primaryColor="?colorAccent"
        app:met_singleLineEllipsis="true" />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/TxtKullaniciSoyadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:hint="Kullanıcı Soyadı"
        android:textCursorDrawable="@color/editTextBaslikRengi"
       android:textSize="14sp"
        app:met_baseColor="@color/editTextBaslikRengi"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="16"
        app:met_primaryColor="?colorAccent"
        app:met_singleLineEllipsis="true" />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/TxtTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:hint="Tel"
        android:textCursorDrawable="@color/editTextBaslikRengi"
       android:textSize="14sp"
        app:met_baseColor="@color/editTextBaslikRengi"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="16"
        app:met_primaryColor="?colorAccent"
        app:met_singleLineEllipsis="true" />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/TxtAdres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:hint="Adres"
        android:textCursorDrawable="@color/editTextBaslikRengi"
       android:textSize="14sp"
        app:met_baseColor="@color/editTextBaslikRengi"
        app:met_floatingLabel="highlight"
        
        app:met_primaryColor="?colorAccent"
        app:met_singleLineEllipsis="true" />

    <Spinner
        android:id="@+id/SpinnerSehir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp" />


</LinearLayout>