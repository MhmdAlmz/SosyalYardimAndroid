<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentler.EsyaDepoEkleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">



        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/TxtMiktar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:hint="Miktar"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textCursorDrawable="@color/editTextBaslikRengi"
            android:textSize="14sp"
            app:met_baseColor="@color/editTextBaslikRengi"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="16"
            app:met_primaryColor="?colorAccent"
            app:met_singleLineEllipsis="true" />

        <Spinner
            android:id="@+id/SpinnerEsya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp" />

        <com.beardedhen.androidbootstrap.BootstrapButton

            android:id="@+id/BtnEsyaDepoEkle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Depoya Eşya Ekle"
            app:bootstrapBrand="primary"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="true"
            tools:text="Depoya Eşya Ekle" />
    </LinearLayout>

</RelativeLayout>