<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragmentler.IhtiyacSahibiEkleFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/TxtIhtiyacSahibiAdi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:hint="Adı"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textCursorDrawable="@color/editTextBaslikRengi"
                android:textSize="14sp"
                app:met_baseColor="@color/editTextBaslikRengi"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="16"
                app:met_primaryColor="?colorAccent"
                app:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/TxtIhtiyacSahibiSoyadi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:hint="Soyadı"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textCursorDrawable="@color/editTextBaslikRengi"
                android:textSize="14sp"
                app:met_baseColor="@color/editTextBaslikRengi"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="16"
                app:met_primaryColor="?colorAccent"
                app:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/TxtIhtiyacSahibiTelNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:hint="Telefon Numarası"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textCursorDrawable="@color/editTextBaslikRengi"
                android:textSize="14sp"
                app:met_baseColor="@color/editTextBaslikRengi"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="16"
                app:met_primaryColor="?colorAccent"
                app:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/TxtIhtiyacSahibiAdres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:hint="Adres"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textCursorDrawable="@color/editTextBaslikRengi"
                android:textSize="14sp"
                app:met_baseColor="@color/editTextBaslikRengi"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="16"
                app:met_primaryColor="?colorAccent"
                app:met_singleLineEllipsis="true" />

            <Spinner
                android:id="@+id/SpinnerSehir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/TxtIhtiyacSahibiAciklama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:hint="Açıklama"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textCursorDrawable="@color/editTextBaslikRengi"
                android:textSize="14sp"
                app:met_baseColor="@color/editTextBaslikRengi"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="16"
                app:met_primaryColor="?colorAccent"
                app:met_singleLineEllipsis="true" />
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/BtnIhtiyacSahibiEkle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="İHTİYAÇ SAHİBİ EKLE"
                app:bootstrapBrand="success"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:roundedCorners="true"
                app:showOutline="false" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>